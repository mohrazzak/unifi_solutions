{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "composite": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
